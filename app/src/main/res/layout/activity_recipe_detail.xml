<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screenBackground"
    tools:context=".RecipeDetailActivity">

    <!-- Toolbar con icono de cuenta -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="@dimen/toolbar_elevation"
        android:padding="@dimen/padding_s">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle de receta"
            android:textStyle="bold"
            android:textSize="@dimen/text_title"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivAccount"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/cuenta"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/margin_s"
            android:layout_marginEnd="@dimen/margin_s" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding_m">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen de la receta" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título de receta"
                android:textSize="@dimen/text_header"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="@dimen/margin_m" />

            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción completa..."
                android:textSize="@dimen/text_normal"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/margin_s" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_l">

                <Button
                    android:id="@+id/btnFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_add_fav"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="@dimen/margin_m" />

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_back"
                    android:backgroundTint="@color/textSecondary"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
