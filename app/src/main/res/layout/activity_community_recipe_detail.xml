<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screenBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="@dimen/toolbar_elevation"
        android:padding="@dimen/padding_s">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receta de la comunidad"
            android:textStyle="bold"
            android:textSize="@dimen/text_title"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivAccount"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/cuenta"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/margin_s"
            android:layout_marginEnd="@dimen/margin_s" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding_m"
        tools:context=".CommunityRecipeDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_detail_image_height"
                android:scaleType="centerCrop"
                android:src="@drawable/tastel" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo"
                android:textSize="@dimen/text_header"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="@dimen/margin_m" />

            <TextView
                android:id="@+id/detailAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@autor"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/secondary"
                android:layout_marginTop="@dimen/margin_xs" />

            <TextView
                android:id="@+id/detailTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo: 20 min"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="@dimen/margin_xs" />

            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n..."
                android:textSize="@dimen/text_medium"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/margin_m" />

            <!-- FILA 1: Favorito / Descargar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_l">

                <Button
                    android:id="@+id/btnFav"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_s"
                    android:text="ðŸ”¥ Favorito"
                    android:textSize="@dimen/text_normal"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_s"
                    android:text="ðŸ’¾ Descargar"
                    android:textSize="@dimen/text_normal"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- FILA 2: Editar / Eliminar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_s">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_s"
                    android:text="âœï¸ Editar"
                    android:textSize="@dimen/text_normal"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_s"
                    android:text="ðŸ—‘ï¸ Eliminar"
                    android:textSize="@dimen/text_normal"
                    android:backgroundTint="@color/secondary"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="â¬… Volver"
                android:textSize="@dimen/text_normal"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_m" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
