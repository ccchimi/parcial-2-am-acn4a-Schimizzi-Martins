<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL CON SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_m"
            android:background="@color/screenBackground">

            <!-- TOOLBAR -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:elevation="@dimen/toolbar_elevation"
                android:padding="@dimen/padding_s">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_title"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:id="@+id/ivAccount"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/cuenta"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/margin_s"/>
            </androidx.appcompat.widget.Toolbar>

            <!-- HERO SECTION CON IMAGEN DE FONDO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_m"
                app:cardCornerRadius="@dimen/card_radius_large"
                app:cardElevation="@dimen/card_elevation">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hero_height">

                    <!-- Imagen de fondo del hero (la cargamos con Glide en MainActivity) -->
                    <ImageView
                        android:id="@+id/heroImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/com" />

                    <!-- Capa oscura para legibilidad -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000"/>

                    <!-- Texto centrado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bienvenido a Tastel"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_header"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PlanificÃ¡ tus comidas sin romperte la cabeza"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_medium"
                            android:layout_marginTop="@dimen/margin_s"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DescubrÃ­ nuevas ideas, guardÃ¡ tus favoritas y cocina a tu ritmo."
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_normal"
                            android:layout_marginTop="@dimen/margin_s"
                            android:paddingStart="@dimen/padding_m"
                            android:paddingEnd="@dimen/padding_m"
                            android:gravity="center"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ACCESOS RAPIDOS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accesos rÃ¡pidos"
                android:textStyle="bold"
                android:textSize="@dimen/text_medium"
                android:layout_marginTop="@dimen/margin_l"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_m"
                android:gravity="center">

                <Button
                    android:id="@+id/btnGoRecipes"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Recetas"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnGoFav"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Favoritos"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="@dimen/margin_s"
                    android:layout_marginEnd="@dimen/margin_s"/>

                <Button
                    android:id="@+id/btnCommunity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Foro"
                    android:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- EXPLORA POR TIPO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ExplorÃ¡ por tipo de receta"
                android:textStyle="bold"
                android:textSize="@dimen/text_medium"
                android:layout_marginTop="@dimen/margin_l"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_s">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_s">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RÃ¡pidas"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listas en menos de 30 minutos."
                        android:textSize="@dimen/text_small"
                        android:layout_marginTop="@dimen/margin_xs"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_s">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Veggie"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ideas sin carne, llenas de sabor."
                        android:textSize="@dimen/text_small"
                        android:layout_marginTop="@dimen/margin_xs"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_s">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dulces"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postres y antojos para compartir."
                        android:textSize="@dimen/text_small"
                        android:layout_marginTop="@dimen/margin_xs"/>
                </LinearLayout>
            </LinearLayout>

            <!-- CARRUSEL DESTACADOS (DINAMICO) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recetas destacadas"
                android:textStyle="bold"
                android:textSize="@dimen/text_medium"
                android:layout_marginTop="@dimen/margin_l"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHighlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

            <!-- TIPS RAPIDOS (CARD) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                app:cardCornerRadius="@dimen/card_radius_large"
                app:cardElevation="@dimen/card_elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_m">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tips rÃ¡pidos para sacarle jugo a Tastel"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/textPrimary"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_s">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­"
                            android:textSize="@dimen/text_medium"
                            android:layout_marginEnd="@dimen/margin_s"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GuardÃ¡ tus recetas favoritas y tenelas siempre a un toque."
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_xs">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”"
                            android:textSize="@dimen/text_medium"
                            android:layout_marginEnd="@dimen/margin_s"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="UsÃ¡ el buscador para encontrar recetas por ingrediente o nombre."
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_xs">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ•’"
                            android:textSize="@dimen/text_medium"
                            android:layout_marginEnd="@dimen/margin_s"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VolvÃ© seguido: vamos sumando nuevas ideas todas las semanas."
                            android:textSize="@dimen/text_normal"
                            android:textColor="@color/textSecondary"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DESDE LA COMUNIDAD (CARD) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_l"
                app:cardCornerRadius="@dimen/card_radius_large"
                app:cardElevation="@dimen/card_elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_m">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desde la comunidad"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/textPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EncontrÃ¡ en el foro ideas, trucos y recomendaciones de otros usuarios que cocinan como vos. CompartÃ­ tus propias creaciones y armÃ¡ tu libro de recetas digital."
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="@dimen/margin_s"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_m">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/padding_s"
                            android:paddingRight="@dimen/padding_s"
                            android:paddingTop="@dimen/padding_xs"
                            android:paddingBottom="@dimen/padding_xs"
                            android:text="PublicÃ¡"
                            android:textSize="@dimen/text_small"
                            android:background="@drawable/bg_community_badge"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_s"
                            android:paddingLeft="@dimen/padding_s"
                            android:paddingRight="@dimen/padding_s"
                            android:paddingTop="@dimen/padding_xs"
                            android:paddingBottom="@dimen/padding_xs"
                            android:text="GuardÃ¡"
                            android:textSize="@dimen/text_small"
                            android:background="@drawable/bg_community_badge"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_s"
                            android:paddingLeft="@dimen/padding_s"
                            android:paddingRight="@dimen/padding_s"
                            android:paddingTop="@dimen/padding_xs"
                            android:paddingBottom="@dimen/padding_xs"
                            android:text="ComentÃ¡"
                            android:textSize="@dimen/text_small"
                            android:background="@drawable/bg_community_badge"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- NAVIGATION DRAWER -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@layout/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
