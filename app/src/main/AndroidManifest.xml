<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERMISO NECESARIO PARA CARGAR IMAGENES DESDE INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TasteIT">

        <!-- LOGIN como primera Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- REGISTER (Nueva actividad para creacion de usuarios) -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- PERFIL -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- HOME -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- RECETAS -->
        <activity
            android:name=".RecipesActivity"
            android:exported="false" />

        <!-- DETALLE DE RECETA -->
        <activity
            android:name=".RecipeDetailActivity"
            android:exported="false" />

        <!-- SPLASH -->
        <activity
            android:name=".SplashActivity"
            android:exported="false" />

        <!-- COMUNIDAD / FORO -->
        <activity
            android:name=".CommunityActivity"
            android:exported="false" />

        <!-- DETALLE DE RECETA DE COMUNIDAD -->
        <activity
            android:name=".CommunityRecipeDetailActivity"
            android:exported="false" />

    </application>

</manifest>